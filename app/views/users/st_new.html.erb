<% @student.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>

<%= form_tag("/users/st_create") do%>
  <p>ユーザー名※</p>
  <input name="name" value=<%=@student.name %>>

  <p>メールアドレス※</p>
  <input name="email" value=<%=@student.email %>>

  <p>学習分野</p>
  <input name="field" value=<%=@student.field %>>

  <p>学校</p>
  <input name="school" value=<%=@student.school %>>

  <p>パスワード※</p>
  <input name="password"type="password",value="<%= @student.password %>">

  <p>※は必須</p>

  <input type="submit" value="新規登録">

<%end%>
